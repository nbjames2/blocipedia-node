<!DOCTYPE html>
<html>
    <% include ../static/partials/head.ejs %>
</html>
<body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <h1> New Wiki</h1>

        <% if(currentUser) { %>
        <form action="/wikis/create" method="post">
            <div class="form-group">
                <label for="title">Wiki title</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title"> 
            </div>
            <div class="form-group">
                <label for="body">Wiki body</label>
                <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
            </div>
            <% if(currentUser.role == 1) { %>
            <div class="form-group">
                <input type="checkbox" name="private" value="private">Private<br>
            </div>
            <% } %>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <% } %>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
</body>